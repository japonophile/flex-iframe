<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Project coordinates -->
  <parent>
    <groupId>com.google.code.flex-iframe</groupId>
    <artifactId>flex-iframe-parent</artifactId>
    <version>1.5.1-SNAPSHOT</version>
  </parent>
  <groupId>com.google.code.flex-iframe</groupId>
  <artifactId>assemblies</artifactId>
  <version>1.5.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <!-- Project infos -->
  <name>flex-iframe :: Assemblies</name>
  <description><![CDATA[Assemblies for the flex-iframe library.]]></description>

  <!-- Dependencies -->
  <dependencies>
    <dependency>
      <groupId>com.google.code.flex-iframe</groupId>
      <artifactId>flex-iframe</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe</groupId>
      <artifactId>flex-iframe</artifactId>
      <version>${project.version}</version>
      <classifier>asdoc</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe</groupId>
      <artifactId>flex-iframe</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>CallIFrameFunction</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>Dashboard</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>IFrameCommTest</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>IFrameWithLoadIndicator</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>MultipleTabNavigators</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>SimpleHtml</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>TabNavigator</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>TreeNavigator</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>CallIFrameFunction</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>Dashboard</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>IFrameCommTest</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>IFrameWithLoadIndicator</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>MultipleTabNavigators</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>SimpleHtml</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>TabNavigator</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.google.code.flex-iframe.examples</groupId>
      <artifactId>TreeNavigator</artifactId>
      <version>${project.version}</version>
      <classifier>binaries</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>

  <!-- Build -->
  <build>

    <!-- Output name -->
    <finalName>flex-iframe-${project.version}</finalName>

    <plugins>

      <!-- Assemblies to package -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-assemblies</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptors>
            <descriptor>${project.basedir}/flex-iframe-assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>

    </plugins>
  </build>

</project>
